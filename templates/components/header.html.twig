<nav>
    <div class="collapsed-navigation">
        <div class="collapsed-navigation__content">
            <div class="collapsed-navigation__close">
                <i class="bi bi-x-circle"></i>
            </div>
            <div class="collapsed-navigation__menu-items">
                <a href="{{ path('home_index') }}"
                   class="collapsed-navigation__item">{% trans %}navigation.home{% endtrans %}</a>
                <a href="{{ path('blog_index') }}"
                   class="collapsed-navigation__item">{% trans %}navigation.blog{% endtrans %}</a>
                <a href="{{ path('forum_index') }}"
                   class="collapsed-navigation__item">{% trans %}navigation.forum{% endtrans %}</a>
                {% if user is null %}
                    <a href="{{ path('user_login') }}"
                       class="collapsed-navigation__item">{% trans %}navigation.login{% endtrans %}</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="main-navigation">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                </div>
            </div>
        </div>
        <div class="container navigation-wrapper">
            <div class="row">
                <div class="col-10 col-md-4">
                    <div class="top-logo"></div>
                </div>
                <div class="col-2 col-md-8">
                    <div class="navigation">
                        <a href="{{ path('home_index') }}"
                           class="navigation__item">{% trans %}navigation.home{% endtrans %}</a>
                        <a href="{{ path('blog_index') }}"
                           class="navigation__item">{% trans %}navigation.blog{% endtrans %}</a>
                        <a href="{{ path('forum_index') }}"
                           class="navigation__item">{% trans %}navigation.forum{% endtrans %}</a>
                        {% if user is null %}
                            <a href="{{ path('user_login') }}"
                               class="navigation__item">{% trans %}navigation.login{% endtrans %}</a>
                        {% endif %}
                    </div>
                    <div class="navigation-wrapper__bars">
                        <i class="bi bi-list"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
