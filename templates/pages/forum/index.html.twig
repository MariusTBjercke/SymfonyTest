{#    {% if user.getLoggedIn %}#}
        <div class="container forum__new-post">
            <div class="row">
                <div class="col">
                    <a class="forum__new-post-btn">{% trans %}forum.new_post.new{% endtrans %}</a>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="forum__new-post-form">
                        <div class="forum__new-post-title">{% trans %}forum.new_post.title{% endtrans %}</div>
                        <div class="forum__new-post_input">
                            <label>
                                <input type="text" id="title" placeholder="{% trans %}forum.new_post.title{% endtrans %}"/>
                            </label>
                        </div>
                        <div class="forum__new-post_input">
                            <textarea id="content" placeholder="Content"></textarea>
                        </div>
                        <div class="forum__new-post_input">
                            <button id="submit">{% trans %}forum.new_post.submit{% endtrans %}</button>
                            <button id="close">{% trans %}forum.new_post.close{% endtrans %}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
